{
  "name": "pm2-datadog",
  "version": "0.0.1",
  "description": "Forward application metrics and events to Datadog",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "changelog": "github-changelog-generator --future-release=$npm_package_version --owner=uphold --repo=koa-instance-digest > CHANGELOG.md",
    "lint": "eslint --cache .",
    "test": "jest --env=node",
    "version": "npm run changelog && git add -A CHANGELOG.md src"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "debugnyan": "^2.0.1",
    "hot-shots": "^4.7.0",
    "pm2": "^2.7.1",
    "pmx": "^1.5.4"
  },
  "devDependencies": {
    "@uphold/github-changelog-generator": "0.4.1",
    "eslint": "^4.8.0",
    "eslint-config-uphold": "0.0.1",
    "jest": "^21.0.0"
  },
  "engines": {
    "node": ">=7.10.0"
  },
  "private": true,
  "apps": [
    {
      "env": {
        "DEBUG": "*pm2-datadog*"
      },
      "script": "src/index.js"
    }
  ]
}
